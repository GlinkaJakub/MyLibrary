<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.my.library.controllers.CategoryController">
    <children>
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <children>
                <Label text="%add.category"/>
                <TextField fx:id="categoryTextField"/>
                <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#addCategoryOnAction"
                        text="%add.button"/>
                <Label text="%choose.category"/>
                <ComboBox fx:id="categoryComboBox" onAction="#comboBoxOnAction" prefWidth="150.0"/>
                <Button fx:id="deleteCategoryButton" mnemonicParsing="false" onAction="#deleteCategoryOnAction"
                        text="%delete.button"/>
                <Button fx:id="editCategoryButton" mnemonicParsing="false" onAction="#editCategoryOnAction"
                        text="%edit.button"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
